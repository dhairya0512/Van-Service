<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".customer.usershomepage"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="User Home Page"
        android:fontFamily="@font/ttnormsproblack"

        android:layout_marginBottom="155dp"
        android:textSize="34sp"></TextView>

    <com.ncorti.slidetoact.SlideToActView
        android:id="@+id/example"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="25dp"
        app:outer_color="@color/purple_700"
        android:layout_marginVertical="15dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ttnormspromedium"
        app:text="Swipe to Cancle"
        />

</LinearLayout>
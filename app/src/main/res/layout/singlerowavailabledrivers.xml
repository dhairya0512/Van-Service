<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:outlineSpotShadowColor="#000000"
    android:outlineAmbientShadowColor="#000000"
    app:cardBackgroundColor="#EFEFEF"
    app:cardCornerRadius="7dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/drivername"
            android:textStyle="bold"
            android:textSize="26sp"
            android:layout_margin="5dp"
            android:layout_marginRight="100dp"
            android:text="Divername"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/priceperyear"
                android:gravity="right"
                android:textSize="24sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="#79F81E"
                android:text="Price per year"/>
        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vehicaltxt"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:layout_marginRight="100dp"
                android:text="Vehical "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vehical"
                android:gravity="right"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:text="Type of Vehical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/modletxt"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:layout_marginRight="100dp"
                android:text="Modle No:  "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/modlenumber"
                android:gravity="right"
                android:maxLines="1"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:text="Type of Vehical"/>
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/platenumbertxt"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:layout_marginRight="100dp"
                android:text="Vehicle Plate No."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/platenumber"
                android:gravity="right"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:text="plate no."/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/colortxt"
                android:layout_margin="5dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginRight="100dp"
                android:text="Vehical Color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/color"
                android:gravity="right"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:maxLines="1"
                android:text="color___"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/emailtxt"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:layout_marginRight="100dp"
                android:text="Email"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:gravity="right"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:text="abc@gmail.com"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mobiletxt"
                android:layout_margin="5dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginRight="100dp"
                android:text="Mobile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mobile"
                android:gravity="right"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:maxLines="1"
                android:text="932 432 321"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>

</androidx.cardview.widget.CardView>
</LinearLayout>
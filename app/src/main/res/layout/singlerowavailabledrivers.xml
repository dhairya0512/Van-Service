<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mycolor"
    android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    android:layout_marginHorizontal="3dp"
    app:cardUseCompatPadding="true"
    android:outlineSpotShadowColor="#000000"
    android:outlineAmbientShadowColor="#000000"
    app:cardBackgroundColor="#FAFFFFFF"
    app:cardCornerRadius="7dp">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shimmerlayoutdriversdetails">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/drivername"
            android:layout_marginLeft="3dp"
            android:textStyle="bold"
            android:background="@drawable/shimmerbg"
            android:layout_weight="4"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="26sp"
            android:text="Divername"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginHorizontal="3dp"
            android:gravity="left"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/priceperyear"
                android:gravity="left"
                android:textSize="26sp"
                android:background="@drawable/shimmerbg"

                android:maxLines="1"
                android:ellipsize="end"
                android:minLines="1"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:text="Price per year"/>
        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginBottom="3dp"

        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/l1"
            android:background="@drawable/shimmerbg"
            android:layout_marginLeft="3dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vehicaltxt"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Vehical "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vehical"
                android:gravity="left"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16sp"
                android:text="Type of Vehical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/l4"
            android:layout_marginHorizontal="3dp"
            android:background="@drawable/shimmerbg"
            android:layout_height="wrap_content"
            android:gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/modletxt"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Modle No:  "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/modlenumber"
                android:gravity="left"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16sp"
                android:text="Type of Vehical"/>
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"

        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/l2"
            android:background="@drawable/shimmerbg"
            android:layout_marginLeft="3dp"

            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/platenumbertxt"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Vehicle Plate No."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/platenumber"
                android:gravity="left"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="plate no."/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/l5"
            android:background="@drawable/shimmerbg"
            android:layout_marginHorizontal="3dp"
            android:layout_height="wrap_content"
            android:gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/colortxt"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Vehical Color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/color"
                android:gravity="left"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="color___"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/l3"
            android:background="@drawable/shimmerbg"
            android:layout_marginLeft="3dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/emailtxt"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Email"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:gravity="left"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="abc@gmail.com"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/l6"
            android:background="@drawable/shimmerbg"
            android:layout_marginHorizontal="3dp"
            android:layout_height="wrap_content"
            android:gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mobiletxt"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Mobile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mobile"
                android:gravity="left"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="932 432 321"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>
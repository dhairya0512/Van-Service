<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <RadioGroup
        android:id="@+id/radgrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/Customer"
            android:fontFamily="@font/ttnormspromedium"

            android:layout_width="wrap_content"
            android:buttonTint="@color/purple_700"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:checked="true"
            android:text="Customer">

        </RadioButton>

        <RadioButton
            android:id="@+id/Driver"
            android:fontFamily="@font/ttnormspromedium"

            android:layout_width="wrap_content"
            android:buttonTint="@color/purple_700"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"

            android:text="Driver">

        </RadioButton>


    </RadioGroup>


    <ImageButton
        android:id="@+id/nxtbtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_margin="40dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/next_button_bg"
        android:drawableLeft="@drawable/ic_baseline_arrow_forward_24"
        android:scaleType="centerCrop"
        android:src="@drawable/forwardbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radgrp"
        app:layout_constraintVertical_bias="0.47" />
</androidx.constraintlayout.widget.ConstraintLayout>

